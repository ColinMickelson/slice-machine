{
  "name": "root",
  "private": true,
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "postinstall": "lerna bootstrap",
    "audit": "lerna run audit",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "lint-staged": "lint-staged",
    "build": "lerna run build && npm run test",
    "publish:alpha": "lerna publish from-package --dist-tag alpha --yes --no-verify-access",
    "publish:production": "NEXT_PUBLIC_SEGMENT_KEY=ED3O1FVsa8DteNyRmAuDyMcPoftJ6VdP lerna publish from-package",
    "::changeset": "npm run changeset add && git add .changeset && git commit -m '[release:changelog] update changeset'; echo 'We commited your changeset. You should defo push this master ✌️'",
    "::release": "manypkg check && npm run build && lerna publish && npm run run changeset",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^7.0.2",
    "lerna": "^3.22.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "typescript": "4.2.2"
  },
  "dependencies": {
    "@segment/analytics-next": "^1.32.1",
    "@theme-ui/color": "^0.3.1",
    "fp-ts": "^2.11.4",
    "io-ts": "^2.2.16",
    "jest": "^25.5.1",
    "node-fetch": "^2.6.1",
    "validate-npm-package": "^1.0.5"
  },
  "lint-staged": {
    "**/packages/slice-machine/**/*.@(js|jsx|ts|tsx|)": ["prettier --write --ignore-unknown" ,"npm --prefix ./packages/slice-machine run lint:precommit"],
    "**/packages/core/**/*.@(js|jsx|ts|tsx|)": ["prettier --write --ignore-unknown", "npm --prefix ./packages/core run lint:precommit"],
    "**/packages/init/**/*.@(js|jsx|ts|tsx|)": ["prettier --write --ignore-unknown", "npm --prefix ./packages/init run lint:precommit"],
    "**/packages/next-slicezone/**/*": "prettier --write --ignore-unknown",
    "**/packages/nuxt-sm/**/*": "prettier --write --ignore-unknown",
    "**/packages/vue-slicezone/**/*": "prettier --write --ignore-unknown",
    "**/packages/sm-commons/**/*": "prettier --write --ignore-unknown"
  }
}
